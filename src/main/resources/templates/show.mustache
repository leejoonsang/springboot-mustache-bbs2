
{{>layouts/header}}
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Content</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
    {{#article}}
        <tr>
            <th>{{id}}</th>
            <td>{{title}}</td>
            <td>{{content}}</td>
        </tr>
    {{/article}}
    </tbody>
</table>

<a class="btn btn-primary" href="/articles/{{article.id}}/edit">edit</a>
<a class="btn btn-danger" href="/articles/{{article.id}}/delete">Delete</a>
<a href="/articles">article list</a>
